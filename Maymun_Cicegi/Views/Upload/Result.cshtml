@{
    ViewData["Title"] = "Tahmin Sonucu";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card p-4 shadow rounded-4 text-center">

        <h2 class="mb-3">Tahmin Sonucu</h2>

        @if (ViewBag.ImagePath != null)
        {
            <img src="@ViewBag.ImagePath" class="img-thumbnail mb-3" style="max-height: 300px;" />
        }

        <div class="alert alert-info fs-5">
            <strong>@ViewBag.Prediction</strong>
        </div>

        <a href="/Upload/Index" class="btn btn-secondary">Yeni Görsel Yükle</a>
    </div>
</div>



