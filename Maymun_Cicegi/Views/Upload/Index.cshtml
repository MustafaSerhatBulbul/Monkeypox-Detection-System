@{
    ViewData["Title"] = "Görsel Yükle";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg p-4 border-0 rounded-4">
                <h3 class="text-center mb-4">Maymun Çiçeği Tespiti</h3>

                <form asp-controller="Upload" asp-action="Index" enctype="multipart/form-data" method="post">
                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Görsel Seçin</label>
                        <input class="form-control" type="file" name="imageFile" id="imageFile" accept="image/*" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Yükle ve Tahmin Et</button>
                </form>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-danger mt-3 text-center">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>
